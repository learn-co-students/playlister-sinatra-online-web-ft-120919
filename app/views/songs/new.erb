<h2> create new song </h2>
<form action="/songs" method="POST">
    <label for="name">Name </label>
    <input type="text" name="song[name]" id="name"><br>

<% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %>
<% end %>

    <h4> without an existing artist</h4>
<label for="artist_name">Artist Name </label>
<input type="text" name="artist[name]" id="artist_name">
    
<h4> existing artist</h4>

<% @artists.each do |artist| %>
<input type="radio" name="song[artist_id]" id="<%=artist.id %>" value="<%= artist.id %>"><%= artist.name %>
<% end %>


<p><input type="submit" value="Create"></p>
</form>
