<h1<Create a New Song!</h1>
<form action="/songs" method="POST">
    <h2><label for="Name">Song Name: </label><input type="text" name="Name" id="Name"></input></h2>
    <h3><label for="Artist Name">Artist Name: </label><input type="text" name="Artist Name" id="Artist Name"></input></h3>
    
    <h3>Existing Genres</h3>
    <% @genres.each do |genre| %>
        <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %><br>
    <% end %>

    <input type="submit" value="Create" id="submit"></input>
</form>
