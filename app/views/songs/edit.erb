

<h2> Edit song </h2>
<p><%= @song.name %></p>
<form action="/songs/<%= @song.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
    
<% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"<%='checked' if @song.genres.include?(genre) %>><%= genre.name %><br>
<% end %>

<label for="artist_name">Artist Name </label>
<input type="text" name="artist[name]" id="artist_name" value="<%=@song.artist.name %>">





<p><input type="submit" value="Save"></p>
</form>
