
<form class="form" action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="song[name]">Name: </label>
  <input type="text" name="song[name]" id="Name" value="<%= @song.name %>">

  <label for="artist[name]">Artist Name</label>
  <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>">

  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]"  value="<%= genre.name %>" <%= 'checked' if @song.genres.include? genre%>><%= genre.name %></input>
  <% end %>
  <br><br>
  <input type="submit" name="Save" value="Save">
</form>
